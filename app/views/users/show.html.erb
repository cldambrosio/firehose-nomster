<div class="booyah-box">
  <div class="row">
    <div class="col-5">
      <%= image_tag 'user.png' %>
    </div>
    <div class="col-7">
      <h4><%= @user.email %></h4>
      <h4>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h4>
      <h4><%= @user.comments.count %> total comments</h4>
      <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
    </div>
  </div>
  <div class="clear"></div>
</div>
<br />
<h3 class="text-center">My Comments</h3>
<br /><br />
<div class="row">
  <% @user.comments.each do |comment| %>
    <div class="col-10 offset-1 col-sm-5">
      <h4 class="align-left"><%= link_to comment.place.name, place_path(comment.place) %></h4>   
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %>
        <small><%= comment.user.email %></small>
      </blockquote>
    </div>
  <% end %>
</div>